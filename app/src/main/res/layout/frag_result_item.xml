<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="result"
            type="com.appslelo.eduwiseschoolmanagment.model.result.ModelResult" />
    </data>


<androidx.cardview.widget.CardView
    android:background="@drawable/bg_tv"
    android:id="@+id/ll_route_item"
    android:gravity="center_vertical"
    android:elevation="22dp"
    app:cardCornerRadius="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >
    <RelativeLayout
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tvExamName"
            android:textSize="@dimen/dimen_18sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{result.examinationName}"
            />
        <TextView
            android:layout_below="@+id/btn_result_grade"
                android:gravity="center_vertical"
                android:id="@+id/tv_marks_label"
                android:textSize="@dimen/dimen_14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total marks obtained: "/>
        <TextView
            android:layout_below="@+id/btn_result_grade"
            android:layout_toEndOf="@+id/tv_marks_label"
                android:gravity="center_vertical"
                android:id="@+id/tvMarks"
                android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/color_btn"
            android:textStyle="bold"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:text="@{result.overAllMO}"/>
        <TextView
            android:layout_below="@+id/btn_result_grade"
            android:layout_toEndOf="@+id/tvMarks"
                android:gravity="center_vertical"
                android:id="@+id/tvFullMarks"
                android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/color_btn"
            android:textStyle="bold"
                android:layout_width="match_parent"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:text="@{result.overAllFM}"/>
            <Button
                android:id="@+id/btn_result_grade"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_btn_main"
                android:text="@{result.totalGrade}"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20sp"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                />
            <ImageView
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_menu_share"
                android:id="@+id/iv_result_share"
                android:textAllCaps="false"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp" />
            <Button
                android:id="@+id/btnResultDetail"
                android:layout_marginStart="60dp"
                android:background="@drawable/bg_et"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="View Details"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="@dimen/dimen_30dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</layout>